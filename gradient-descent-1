'''Cost Functions'''
import matplotlib.pyplot as plt
import numpy as np


def f(x):
	'''	Simple Cost Function
		f(x) = x^2 + x + 1 '''
	return x**2 + x + 1

#Make data 
x1 = np.linspace(start= -3, stop=3, num=100)
#print(x1);print(type(x1)) - x1 is an nd array with 100 values

#Plot
plt.xlim([-3,3])
plt.ylim(0, 8)
plt.xlabel('X', fontsize = 16)
plt.ylabel('f(x)', fontsize = 16)
plt.plot(x1,f(x1))
plt.show()
